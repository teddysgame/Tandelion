<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>

<style>
    input.sb1 {
        float: left;
        width: 110px; /*this is related to the input*/
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
        /*background-color: white;*/
        /*background-image: url('Black.png');*/ /*searchicon.png is located at the root folder of Home.html (The same location as this html.)*/
        /*background-position: 1px 1px;*/ /*This is the positioning of the png in the search bar*/
        /*background-repeat: no-repeat;*/
        padding: 5px 0px 5px 10px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }

    input:focus.sb1 {
        width: 400px; /*this is related to the input*/
    }
</style>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Projects")" class = "navbar-brand">
                    <img src="~/Image/Logo.png" width="20" height="20" class="d-inline-block" alt="">
                    @Html.ActionLink("Tandelion", "Index", "Projects", new { area = "" }, new { @class = "navbar-brand" })
                </a>

            </div>
            @*<div class="col-sm-3 d-inline-block">
                <form class="navbar-form" role="search">
                    <input class="sb1" type="text" name="search" placeholder="Search">
                </form>
            </div>*@
            <div class="d-inline-block navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Project", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Trade", "Index", "Trades")</li>
                    <li>@Html.ActionLink("Tender", "Index", "Tenders")</li>
                    <li>@Html.ActionLink("Invitation", "Index", "Invitations")</li>
                    <li>@Html.ActionLink("Account", "Index", "CreateAccounts")</li>
                    
                </ul>
                @*<div>
                    <form class="navbar-form" role="search">
                        <input class="sb1" type="text" name="search" placeholder="Search">
                    </form>
                </div>*@

                    @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

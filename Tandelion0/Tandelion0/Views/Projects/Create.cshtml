@model Tandelion0.Models.Project

@{
    ViewBag.Title = "Create";
}

<style>
    p.ex1 {
        padding: 1cm;
    }

    H2.ex1 {
        padding: 1cm;
    }

    .editor-field textarea {
        width: 400px;
        height: 200px;
    }
</style>

<h2 class="ex1" align="center">Create New Project</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <!-- Left half -->
            <div class="col-md-6" align="center">
                <p>
                    <img src="~/Image/New Project/Rocket.jpg" alt="Alternate Text" width=400 height=300 />
                    <!--img src="img/other img/rocket.jpg" width="400px" height="300px">-->
                </p>
                <h4 align="center">Your journey begins here</h4>
            </div>

            <div class="form-horizontal">
                <div class="container">
                    <div class="row justify-content-md-center" style="height: 100px">
                        <div class="col-md-6 jumbotron">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @* Project Name *@
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>Project Name</h5>
                                    @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @* Client    *@
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.client, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>Client</h5>
                                    @Html.EditorFor(model => model.client, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                                    @Html.ValidationMessageFor(model => model.client, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @* Project title *@
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.ProjectTitle, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12 editor-field">
                                    <h5>Project Title</h5>
                                    @*@Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @Html.TextAreaFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                                    @Html.ValidationMessageFor(model => model.ProjectTitle, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <hr />
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.Timeline, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>Timeline</h5>
                                    @Html.EditorFor(model => model.Timeline, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Timeline, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>Start Date</h5>
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.DueDate, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>Due Date</h5>
                                    @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control", placeholder = "Due date here..." })
                                    @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                @*@Html.LabelFor(model => model.NoTrade, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <div class="col-md-12">
                                    <h5>No of Trade</h5>
                                    @Html.EditorFor(model => model.NoTrade, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NoTrade, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="container" align="center">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
